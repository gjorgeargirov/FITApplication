<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/bootstrap")
</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container">
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <div class="row w-100 gx-0 m-0 bg-dark py-5">
            <div class="col-12 text-center justify-content-center text-white">
                <h2>CONTACT FORM</h2>
                <p>Want to sat hello? Want to know more about us? Give us a call or drop us an email and<br>we will get back to you as soon as we can.</p>
                <button onclick="location.href='mailto: fit_team@example.com'" class="btn btn-light px-5">EMAIL US</button><bR>
                <div class="pt-3">
                    <a href="#"><i class="fab fa-facebook text-white fa-lg px-2"></i></a>
                    <a href="#"><i class="fab fa-instagram text-white fa-lg px-2"></i></a>
                    <a href="#"><i class="fab fa-twitter text-white fa-lg px-2"></i></a>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

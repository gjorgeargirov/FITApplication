@model FITApplication.Models.AddToRoleModel
@{
    ViewBag.Title = "AddToRoleModel";
}

<h2>Add user with this email to a role:</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @cless = "form-control" })
</div>
<div class="form-group">
    @Html.DropDownListFor(z => z.SelectedRole, new SelectList(Model.Roles), new { @cless = "form-control" })
</div>
<button type="submit" class="btn btn-outline-dark">Add</button>
}

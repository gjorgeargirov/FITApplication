@model FITApplication.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4 border border-1 border-dark m-5  py-5">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Surname, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Age, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Weight, new { @class = "col-md-2 control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Height, new { @class = "col-md-2 control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Height, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="col">
                        <input type="submit" class="btn btn-dark my-4 btn-sm px-5" value="Register" />
                    </div>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>